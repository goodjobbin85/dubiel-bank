<h1 align="center">User Info</h1>

<table class="table group-center">
	<thead>
		<tr>
			<td>User Name</td>
			<td>User Email</td>
			<td>Account Balance</td>
		</tr>
	</thead>

	<tbody>
		<tr>
			<td><%=@user.full_name %></td>
			<td><%= @user.email %></td>
			<td><%= @user.balance %></td>
		</tr>
	</tbody>
</table>

<h3><bold><%= @user.print_balance %></bold></h3>

<%= link_to "Edit Profile", edit_user_path(@user) %> |
<%= link_to "Delete User", user_path(@user), method: :delete, 
				data: { confirm: "Are you sure you want to delete your account?"} %>