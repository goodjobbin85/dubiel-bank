
<div class="jumbotron">
<h2 align="center">Welcome to the Dubiel Family Bank</h2>
  <div class="center-align">
  	<% if !logged_in? %>
  		<%= link_to "Log In", login_path, class: "btn btn-primary btn-lg" %>
  		<%= link_to "Sign Up", signup_path, class: "btn btn-primary btn-lg" %>
  	<% else %>
  		<h3 align="center">Logged in as <strong><%= current_user.full_name %></strong></h3>
  		<%= link_to "Log Out", logout_path, method: :delete, class: "btn btn-primary btn-lg" %>
  	<% end %>
  </div>
</div>
